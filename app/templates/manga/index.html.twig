{% extends 'base.html.twig' %}

{% block title %}Manga{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4 text-white p-3 rounded" style="background: linear-gradient(135deg, #4caf50, #8bc34a);">
            üìö Liste des mangas disponibles
        </h1>

        <div class="mb-4 text-end">
            <a class="btn btn-success shadow-sm" href="{{ path('app_manga_new') }}">‚ûï Ajouter un manga</a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover table-striped table-bordered shadow-sm">
                <thead class="text-white text-center" style="background: linear-gradient(135deg, #333333, #4caf50);">
                    <tr>
                        <th>Titre</th>
                        <th>Prix</th>
                        <th>Description</th>
                        <th>Cr√©√© le</th>
                        <th>Mis √† jour le</th>
                        <th>Tags</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for manga in mangas %}
                    <tr class="align-middle">
                        <td class="fw-bold">{{ manga.title }}</td>
                        <td class="text-center text-success fw-semibold">{{ manga.price }} ‚Ç¨</td>
                        <td>{{ manga.description }}</td>
                        <td class="text-center">{{ manga.createdAt ? manga.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td class="text-center">{{ manga.updatedAt ? manga.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        
                        <!-- Affichage des tags -->
                        <td class="text-center">
                            {% if manga.tags is not empty %}
                                <ul class="list-unstyled">
                                    {% for tag in manga.tags %}
                                        <li><span class="badge bg-info">{{ tag.name }}</span></li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <span class="text-warning">Aucun tag</span>
                            {% endif %}
                        </td>

                        <td class="text-center">
                            <div class="d-flex gap-2 justify-content-center">
                                <a class="btn btn-info btn-sm shadow-sm" href="{{ path('app_manga_show', {'id': manga.id}) }}">
                                    üëÅÔ∏è Voir
                                </a>
                                <a class="btn btn-warning btn-sm shadow-sm" href="{{ path('app_manga_edit', {'id': manga.id}) }}">
                                    ‚úèÔ∏è Modifier
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center text-danger fw-bold">Aucun manga trouv√©</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
