{% extends 'base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ tag.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ tag.name }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3 d-flex justify-content-start gap-2">
            <a class="btn btn-secondary" href="{{ path('app_tag_index') }}">
                ↩️ Retour à la liste
            </a>
            <a class="btn btn-warning" href="{{ path('app_tag_edit', {'id': tag.id}) }}">
                ✏️ Modifier
            </a>
            {{ include('tag/_delete_form.html.twig') }}
        </div>


    </div>
{% endblock %}
